<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(forum) -%>">
  <span class='title'>
    <%= forum.title %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.forums_forum_path(forum), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_forums_admin_forum_path(forum), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.forums_admin_forum_path(forum), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: forum.title)}}  ) %>
  </span>
</li>
