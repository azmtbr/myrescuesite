<ul>
  <% if ::Refinery::Staffs::Admin::StaffsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.staffs_admin_staffs_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_staffs_admin_staff_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Staffs::Admin::StaffsController.sortable? && ::Refinery::Staffs::Staff.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.staffs_admin_staffs_path,
                     t('.reorder', what:  "Staffs"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.staffs_admin_staffs_path,
                      t('.reorder_done', what: "Staffs"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
