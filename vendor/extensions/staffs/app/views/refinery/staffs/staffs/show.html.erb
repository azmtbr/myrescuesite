<div class="row">
  <div class="media">
    <section id="body_content">
      <section id="body">
        <div id="animal">
          <section>
            <h2>Name</h2>
            <p>
              <%=raw @staff.name %>
            </p>
          </section>
          <section>
            <h2>Title</h2>
            <p>
              <%=raw @staff.title %>
            </p>
          </section>
          <div class="animal_photo">
          <%= image_fu @staff.photo %>
          </div>
          <section>
            <h2>Bio</h2>
            <p>
              <%=raw @staff.bio %>
            </p>
          </section>
        </div>
      </section>
    </section>


    <% content_for :side_body do %>
      <aside>
        <h2><%= t('.other') %></h2>
        <ul id="staffs">
          <% @staffs.each do |staff| %>
            <li>
              <%= link_to staff.name, refinery.staffs_staff_path(staff) %>
            </li>
          <% end %>
        </ul>
      </aside>
    <% end %>


      <%= render '/refinery/content_page' %>
    </div>
  </div>
