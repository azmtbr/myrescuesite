
<div class="jumbotron">
  <section id="body_content">
    <section id="body">
      <div id="animals">
          <% @staffs.each do |staff| %>
              <div class="animal">
                  <div class="img-responsive" alt="Responsive image" ><%= link_to (image_fu staff.photo), refinery.staffs_staff_path(staff) %></div>
                  <div class="animal_name"><%= link_to staff.name, refinery.staffs_staff_path(staff) %></div>
              </div>
          <% end %>
      </div>
    </section>
  </section>
  <%= render '/refinery/content_page' %>
</div>
