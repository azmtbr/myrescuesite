
    <section id="body_content">
      <section id="body">
        <div id="animal">
        <section>
          <h2>Name</h2>
          <p>
            <%=raw @animal.name %>
          </p>
        </section>
        <div class="animal_photo">
        <%= image_fu @animal.photo %>
        </div>
        <section>
          <h2>Breed</h2>
          <p>
            <%=raw @animal.breed %>
          </p>
        </section>
        <section>
          <h2>Birthdate</h2>
          <p>
            <%=raw @animal.birthdate.strftime("%B %d, %Y") %>
          </p>
        </section>
        <section>
          <h2>Bio</h2>
          <p>
            <%=raw @animal.bio %>
          </p>
        </section>
        </div>
      </section>
    </section>




    <% content_for :side_body do %>
      <aside>
        <h2><%= t('.other') %></h2>
        <ul id="animals">
          <% @animals.each do |animal| %>
            <li>
              <%= link_to animal.name, refinery.animals_animal_path(animal) %>
            </li>
          <% end %>
        </ul>
      </aside>
    <% end %>




<%= render '/refinery/content_page' %>
