<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(animal) -%>">
  <span class='title'>
    <%= animal.name %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.animals_animal_path(animal), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_animals_admin_animal_path(animal), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.animals_admin_animal_path(animal), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: animal.name)}}  ) %>
  </span>
</li>
