<%# Intentionally empty, useful override point to add extra fields. %>
<div class='field'>
  <span class='label_with_help'>
    <%= f.label :show_in_footer, "Show in footer" %>
  </span>
  <%= f.check_box :show_in_footer %> Show this page in the footer menu
</div>

<div class="field">
<%= f.label :background_image %>
<%= render :partial => "/refinery/admin/image_picker", :locals => {
  :f => f,
  :field => :background_image_id,
  :image => f.object.background_image,
  :toggle_image_display => true
}
%>
</div>
